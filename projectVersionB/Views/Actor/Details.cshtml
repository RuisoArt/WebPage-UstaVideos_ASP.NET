@model Actor

@{
    ViewData["Title"] = "Details for " + Model.FullName;
}

<div class="row text">
    <div class="col-md-8 offset-md-2">
        <h1>Details for @Model.FullName</h1>

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly/>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    @* <input asp-for="Bio" class="form-control" readonly /> *@
                    <textarea asp-for="Bio" class="form-control" readonly></textarea>
                </div>
                <div class="form-group text-center mt-3">
                    <img src="@Model.ProfilePictureURL" style="width: 200px"/>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-group mt-2">
    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-secondary float-end" asp-action="Index" >Show all</a>
</div>